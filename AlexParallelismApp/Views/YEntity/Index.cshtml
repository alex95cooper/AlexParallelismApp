@model List<YEntityViewModel>;

@{
    const string textTitle = "Catalog";
    ViewData["Title"] = textTitle;
}

<div class="catalog-page-container">
    <div class="catalog-page-background-container">
        <div class="catalog-content">

            <div class="add-button">
                <a class="add-button-content" asp-controller="YEntity" asp-action="Add">
                    <strong>+ Add new</strong>
                </a>
            </div>

            @if (Model.Count > 0)
            {
                <div class="entities-container">
                    @foreach (var yEntity in Model.Where(yEntity => yEntity != null))
                    {
                        <div class="model-container">
                            <div class="model-info-container">
                                <h2 class="name">@yEntity.Name</h2>
                                <p class="description">@yEntity.Description</p>
                                <div class="model-buttons-container">
                                    <a class="change-button" asp-controller="YEntity" asp-route-id="@yEntity.Id"
                                       asp-action="Update">
                                        Change
                                    </a>
                                    <a class="delete-button" asp-controller="YEntity" asp-route-id="@yEntity.Id"
                                        asp-action="Delete">
                                        Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="notification-header">
                    <h1>Catalog is empty</h1>
                </div>
            }
        </div>
    </div>
</div>